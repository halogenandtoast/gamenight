<section class="main-section">
  <header class="title">
    <h1>New Location</h1>
    <div class="back">
      <%= link_to "&laquo".html_safe, @group %>
    </div>
  </header>

  <%= form_for [@group, @location] do |form| %>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <%= form.submit 'Add' %>
  <% end %>
</section>
