<section class="main-section">
  <header class="title">
    <h1>Settings</h1>
  </header>
  <%= form_for current_user, url: settings_path, method: :patch  do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <div>
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>
    <div>
      <%= form.label :bgg_username %>
      <%= form.text_field :bgg_username %>
    </div>
    <div>
      <%= form.submit "Update" %>
    </div>
  <% end %>
</section>
